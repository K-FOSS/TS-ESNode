{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "importHelpers": false,
    "baseUrl": "src",
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
